global-reset()

html
	h1, h2, h3, h4, h5, h6, span, li, input
		opacity 0
		transition opacity 0.8s ease-out-cubic
	

.wf-loading
	h1, h2, h3, h4, h5, h6, span, li, input
		opacity 0
		
.wf-active
	h1, h2, h3, h4, h5, h6, span, li, input
		opacity 1

	
body
	background-image url(../img/bg_small.jpg)
	background-position 50% 0
	font-family "museo-slab", serif
	font-weight 300
	padding 30px
	color #FFF
	
button, input
	outline none
	outline-style none
	outline-width 0
	border none
	box-shadow none
	padding 10px 20px
	font-size 1.2em
	background: #FFF


section.splash
	.soch-logo
		display block
		margin 20px auto
		width 200px
		height 200px


	h1
		display block
		text-align center
		margin 80px auto
		margin-botton 50px;
		font-size 2em
		font-weight 300
		em 
			font-weight 300
			font-style italic
			color #ffbb04
section.cta
	text-align: center
	h2.cta-text
		font-size 1.2em
		padding 40px
	input.cta-input
		display inline-block
		margin 0 auto
		border-radius 5px
	button.cta-button
		background #000
		color #FFF
		border-radius 5px
		transition 0.1s ease-out
		&:hover
			transform scale(1.04,1.04)
			background #ffbb04

section.overlay
	position fixed
	width 100%
	height 100%
	background #000
	opacity 0
	top 0
	left 0
	z-index 3
	pointer-events none
	transition 0.2s ease-out
	&.block
		opacity 0.5
		pointer-events auto
		
section.modal-window
	margin 0 auto
	background #FFF
	width 500px
	// height 300px
	position fixed
	left 50%
	top 30%
	margin-left -250px
	margin-top -150px
	padding: 50px
	z-index 4
	pointer-events none
	opacity 0
	transition 0.2s ease-out
	&.visible
		opacity 1
		pointer-events auto
	
	button.close-modal
		display block
		position absolute
		padding 0
		top 5px
		left 5px
		
	article.message
		text-align center
		display none
		svg
			width 72px
			height 72px
			display block
			margin 30px auto
			// margin-top 50px
			padding 10px
			// border 3px solid #000
			border-radius 100px
			path,circle,polyline
				fill #FFF
		p
			color #000
			margin 30px auto
			font-size 1.2em
		&.success
			svg
				background #2ecc71
		&.failure
			svg
				background #e74c3c
				fill #FFF